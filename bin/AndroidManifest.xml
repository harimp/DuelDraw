<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.ubc.dueldraw"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".SocketApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_action_name"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:logo="@drawable/dueldrawtext">
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".MenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ActivePlayersActivity"
            android:label="@string/logo"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".IncomingChallengeActivity"
            android:label="@string/logo"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".DrawActivity"
            android:label="@string/logo"
            android:screenOrientation="portrait" >
                        <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
                <activity
            android:name=".GameResultActivity"
            android:label="@string/logo"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>